[core]
  excludesfile  = "~/.gitignore"
  editor        = vim
  autcrlf       = input
  whitespace    = cr-at-eol
  pager         = diff-highlight | less -R
  ignoreCase    = false

[alias]
  b       = branch -vv
  ci      = commit -v
  commit  = commit -v
  co      = checkout
  st      = status
  unstage = reset HEAD --

[merge]
  tool = p4merge
  keepBackup = false
  conflictstyle = diff3

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "p4merge"]
  trustExitCode = true

[pager]
  show = /usr/share/git-core/contrib/diff-highlightasdfasdf
  diff = /usr/share/git-core/contrib/diff-highlightasdfasdf

[diff]
  renames = true
  tool = p4merge

[color]
  ui = always
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = blue
  frag = magenta
  old = red
  new = green

[color "status"]
  added = green
  changed = blue
  untracked = yellow

[push]
  default = upstream

[user]
  email = patrik@redlin.se
  name = "Patrik Martinsson"
  signingkey = 3B1A5698BDBF8EFF

[commit]
  gpgSign = true
[tag]
  gpgSign = true
[gpg]
  program = /usr/bin/gpg
